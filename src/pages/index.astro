---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="basePage">
      <h1>Serving the Arizona valley since 1975</h1>
      <img
        src="/images/nitehawk.png"
        alt="A street sweeper in a parking lot."
        id="homeHero"
      />
      <section id="sweeper_cat">
        <a href="/street-sweepers">Street Sweepers</a>
        <a href="/parking-lot-sweepers">Parking Lot Sweepers</a>
        <a href="/industrial-sweepers-scrubbers"
          >Industrial Sweepers &amp; Scrubbers</a
        >
      </section>

      <section id="logos">
        <ul>
          <li>
            <img
              src="/images/bucher-municipal.png"
              alt="Bucher Municipal Logo"
              class="product-logo"
            />
          </li>
          <li>
            <img
              src="/images/powerboss.png"
              alt="PowerBoss Logo"
              class="product-logo"
            />
          </li>
          <li>
            <img
              src="/images/skavinjer.png"
              alt="Sakvinjer Logo"
              class="product-logo"
            />
          </li>
          <li>
            <img
              src="/images/victory-sweepers.png"
              alt="Victory Sweepers Logo"
              class="product-logo"
            />
          </li>
          <li>
            <img
              src="/images/rssequipment.png"
              alt="RSS Equipment Logo"
              class="product-logo"
            />
          </li>
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
